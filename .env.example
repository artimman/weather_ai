# File: .env.example
# Rename to .env and fill real values

# PostgreSQL (for Django)
POSTGRES_DB=weather_db
POSTGRES_USER=weather_user
POSTGRES_PASSWORD=change-me
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Django JWT / shared secret
DJANGO_SECRET_KEY=change-me-django-secret
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_DEBUG=False
JWT_ALGORITHM=HS256

# FastAPI
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# SQLAlchemy (for FastAPI)
DATABASE_URL=postgresql+psycopg2://weather_db:weather_db@db:5432/weather_db

# PGADMIN
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=Admin # supersecret

# AI provider (OpenAI example)
AI_PROVIDER=openai # none | openai | groq | gemini
OPENAI_API_KEY=change-me-openai-secret

# Optional
REDIS_URL=redis://redis:6379/0

# Deployment
SENTRY_DSN=

# OpenWeather API
OPENWEATHER_API_KEY=change-me-weather-secret
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5
